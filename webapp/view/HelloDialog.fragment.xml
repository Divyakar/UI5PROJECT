<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="helloDialog"
		title="Hello {/recipient/name}">
        
         <core:Icon
            src="sap-icon://message-popup"
            size="8rem"
            class="sapUiMediumMargin"/>

		<beginButton>
			<Button
				text="{i18n>dialogCloseButtonText}"
				press="onCloseDialog"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
